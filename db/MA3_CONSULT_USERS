SELECT users.id, CONCAT(users.user , " ", users.lastname ) AS nombre, users.phone as telefono, users.address as direccion, users.mail as correo, users.rfc as rfc, users.clave_elector as clave, colony.name as colonia, locality.name as localidad, zone.name as zona, user_type.name as tipo_usuario, CONCAT(intake_type.name ," - " ,consume_type.name ) as toma_consumo, service_type.name as tipo_servicio ,service_status.name as estado_servicio FROM users LEFT OUTER JOIN colony ON users.id_colony = colony.id LEFT OUTER JOIN locality ON users.id_locality = locality.id LEFT OUTER JOIN zone ON users.id_zone = zone.id LEFT OUTER JOIN user_type ON users.id_usertype = user_type.id LEFT OUTER JOIN intake_type ON users.id_intaketype = intake_type.id LEFT OUTER JOIN consume_type ON users.id_consumtype = consume_type.id LEFT OUTER JOIN service_type ON users.id_servicetype = service_type.id LEFT OUTER JOIN service_status ON users.id_servicestatus = service_status.id;
